global:
  checkNewVersion: false
  sendAnonymousUsage: false
entryPoints:
  web:
    address: ":{{ traefik_web_port }}"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":{{ traefik_websecure_port }}"
    # This disables upload restrictions for large files. If not set, traefik will kill the connection after a set amount
    # of time.
    transport:
      respondingTimeouts:
        readTimeout: "0s"
certificatesResolvers:
    infomaniak:
      acme:
        email: acme@mikemarti.ch
        storage: /etc/traefik/acme.json
        caServer: "{{ traefik_ca_server }}"
        keyType: EC256
        dnsChallenge:
          provider: infomaniak
          resolvers:
            - "1.1.1.1:53"
            - "8.8.8.8:53"
api:
  dashboard: true
providers:
  file:
    directory: "/etc/traefik/dynamic"
    watch: true

