{
  "description": "Global policy",

  "zone": {
    "internet": { "iface": "eth0" },
    "vpn": { "iface": "tailscale0" }
  },

  "policy": [{ "in": "internet", "action": "drop" }, { "action": "reject" }],

  "filter": [
    {
      "in": "internet",
      "out": "_fw",
      "service": "ping",
      "action": "accept",
      "flow-limit": { "count": 10, "interval": 6 }
    },
    {
      "in": "vpn",
      "out": "_fw",
      "service": "ping",
      "action": "accept",
      "flow-limit": { "count": 10, "interval": 6 }
    },
    {
      "in": "internet",
      "out": "_fw",
      "service": "ssh",
      "action": "accept"
    },
    {
      "in": "vpn",
      "out": "_fw",
      "service": "ssh",
      "action": "accept"
    },
    {
      "in": "_fw",
      "out": "internet",
      "service": "http",
      "action": "accept"
    },
    {
      "in": "_fw",
      "out": "vpn",
      "service": "http",
      "action": "accept"
    },
    {
      "in": "_fw",
      "out": "internet",
      "service": "https",
      "action": "accept"
    },
    {
      "in": "_fw",
      "out": "vpn",
      "service": "https",
      "action": "accept"
    },
    {
      "in": "_fw",
      "out": "internet",
      "service": "dns",
      "action": "accept"
    },
    {
      "in": "_fw",
      "out": "vpn",
      "service": "dns",
      "action": "accept"
    }
  ]
}
