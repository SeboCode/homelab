{
  "description": "Allow access to traefik service",

  "service": {
    "traefik": [
      { "proto": "tcp", "port": {{ traefik_websecure_port }} },
      { "proto": "udp", "port": {{ traefik_websecure_port }} }
      { "proto": "tcp", "port": {{ traefik_dashboard_port }} },
      { "proto": "udp", "port": {{ traefik_dashboard_port }} }
    ]
  },

  "filter": [
    {
      "in": "internet",
      "out": "_fw",
      "service": "traefik",
      "action": "accept"
    }
  ]
}
